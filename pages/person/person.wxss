/* pages/person/person.wxss */

page{
  background-color: #efeff4;
}

.head-img{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.key-value{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.key image{
  width: 34rpx;
  height: 34rpx;
  vertical-align: middle;
  margin: -4rpx 20rpx 0 0;
}
.value{
  flex:1;
  text-align: right;
  color: #C0A45B;
  font-size: 26rpx;
}
.key-value input[type="text"]{
  text-align: right;
  color: #333;
}
.right-icon{
  width: 24rpx;
  height: 24rpx;
  vertical-align: middle;
  margin: 2rpx 0 0 10rpx; 
}

.header{
  height:120rpx;
}
