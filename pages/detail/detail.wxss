/* pages/detail/detail.wxss */
page{
  background-color: #efeff4;
  padding-bottom: 98rpx;
}

.goods-img{
  width: 100%;
  height: 468rpx;
}
.active{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  box-sizing: border-box;
  background: #FBF9F4;
}
.price{
  font-size: 30rpx;
  color: #E95A14;
}
.original-pirce{
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}
.active-txt{
  margin-left: 10rpx;
  color: #C0A45B;
}
.time{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.time-info{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.time-info view{
  padding:2rpx 4rpx;
  margin:0 10rpx;
  border-radius: 4rpx;
  background-color: #C0A45B;
  color: #fff;
}
.time-info text{
  color: #C0A45B;
}
.goods-info{
  padding: 20rpx 30rpx;
}

.limit{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  color: #999;
}
.limit-condition{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}
.progress-bc{
  position: relative;
  width: 202rpx;
  height: 26rpx;
  border: 1px solid #C0A45B;
  border-radius: 14rpx;
  overflow: hidden;
}
.progress{
  position: absolute;
  top: 0;
  left: 0;
  width: 100rpx;
  height: 26rpx;
  border-radius: 0rpx;
  background-color: #C0A45B;
  
}

.brief-txt{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 30rpx;
  font-size: 26rpx;
}

.btn{
  width: 100%;
  padding: 10rpx 0;
  position: fixed;
  bottom: 0rpx;
  left: 0;
  
}
.btn button{
  width: 350rpx;
  height: 78rpx;
  line-height: 78rpx;
  background: #C0A45B;
  border-radius: 40rpx;
  font-size: 30rpx;
  color: #fff;
}