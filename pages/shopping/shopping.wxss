/* pages/shopping/shopping.wxss */

page{
  background-color: #efeff4;
}

.search{
  width: 100%;
  position: fixed;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  
}
.search-icon{
  position: absolute;
  top: 39rpx;
  left: 50rpx;
  width: 34rpx;
  height: 34rpx;
}
.search input[type="text"]{
  width: 100%;
  height: 72rpx;
  padding: 0 70rpx;
  text-align: center;
  border-radius: 36rpx;
  background-color: #f9f9f9;
  box-sizing: border-box;
}

.scroll-content{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  /*margin-top: 114rpx;*/
}

.tab-content{
  display: flex;
  flex-direction: row;
  min-height: 100%;
}
.tab{
  width: 166rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow-y: scroll;
  height: 100%;
  background-color: #f9f9f9;
  font-size: 26rpx;
}
.tab-list{
  width: 100%;
  height: 82rpx;
  line-height: 82rpx;
  text-align: center;
}
.tab-list text{
  line-height: 82rpx;
}
.current{
  color: #C0A45B;
  background-color: #fff;
}

.product{
  flex: 1;
}
.goods{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
  font-size: 26rpx;
}
.goods-img{
  width: 160rpx;
  height: 120rpx;
}
.goods-info{
  height: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: left;
  justify-content: space-between;
}
.goods-money{
  color: #E95A14;
}

.non-goods{
  flex:1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}
.non-goods image{
  width: 250rpx;
  height: 210rpx;
  margin-top: -400rpx;
}
