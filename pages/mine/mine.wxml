<!--pages/mine/mine.wxml-->
<view class="header bc-w">
  <view class="user">
    <view class="head" bindtap='goToPerson'>
      <view>
        <view class="user-name">{{userInfo.nickname}}</view>
        <view class="user-level mt-10">
          <view class='level-sign'>
            <image src='/images/level.png'></image>
            <text class="level-num">{{studyInfo.level}}</text>
          </view>
          
          <text>{{studyInfo.levelName}}</text>
        </view>
      </view>
      <image src="{{userInfo.photoUrl}}"></image>
      
    </view>
    <view class="user-data mt-10">
      <view class="data-content" bindtap='goToCredit'>
        <!--<image src="/images/koubi.png"></image>-->
        <view>我的学力</view>
        <view class="data-sum mt-5">{{walletInfo.virtualCoin}}</view>
      </view>

      <view class="data-content border5 ml-20">
        <view class="l-border"></view>
        <!--<image src="/images/shichang.png"></image>-->
        <view>学习时长</view>
        <view class="data-sum mt-5">0</view>
      </view>

    </view>
  </view>
</view>

<view class="p-h15 bc-w">
  <view class="key-value border5" bindtap='goToClassmate'>
    <view class="key">
      <image src='/images/tongxue@2x.png'></image>
      <text>我的同学</text>
    </view>
    <view class="value">
      <image class="right-icon" src='/images/right.png'></image>
    </view>
    <view class="bottomBorder"></view>
  </view>

  <view class="key-value border5" bindtap='goToCollection'>
    <view class="key">
      <image src='/images/shoucang@2x.png'></image>
      <text>我的收藏</text>
    </view>
    <view class="value">
      <image class="right-icon" src='/images/right.png'></image>
    </view>
    <view class="bottomBorder"></view>
  </view>

  <view class="key-value border5" bindtap='goToPayCourse'>
    <view class="key">
      <image src='/images/yigou@2x.png'></image>
      <text>已购课程</text>
    </view>
    <view class="value">
      <image class="right-icon" src='/images/right.png'></image>
    </view>
    <view class="bottomBorder"></view>
  </view>

  <view class="key-value border5" bindtap='goToRecord'>
    <view class="key">
      <image src='/images/lishi@2x.png'></image>
      <text>学习历史</text>
    </view>
    <view class="value">
      <image class="right-icon" src='/images/right.png'></image>
    </view>
    <view class="bottomBorder"></view>
  </view>

  <view class="key-value border5" bindtap='goToLiveOrder'>
    <view class="key">
      <image src='/images/yuyue@2x.png'></image>
      <text>直播预约</text>
    </view>
    <view class="value">
      <image class="right-icon" src='/images/right.png'></image>
    </view>
  </view>

</view>

<view class="p-h15 bc-w mt-10">
  
  <view class="key-value border5" bindtap='goToShopping'>
    <view class="key">
      <image src='/images/shangcheng@2x.png'></image>
      <text>福利社</text>
    </view>
    <view class="value">
      <image class="right-icon" src='/images/right.png'></image>
    </view>
    <view class="bottomBorder"></view>
  </view>
  

  <view class="key-value border5" bindtap='goToTopicList'>
    <view class="key">
      <image src='/images/book.png'></image>
      <text>习题册</text>
    </view>
    <view class="value">
      <image class="right-icon" src='/images/right.png'></image>
    </view>
    <view class="bottomBorder"></view>
  </view>

  
</view>

<view class="p-h15 bc-w mt-10">

  <view class="key-value border5" hidden='true'>
    <view class="key">
      <image src='/images/yaoqing@2x.png'></image>
      <text>邀请好友</text>
    </view>
    <view class="value">
      <image class="right-icon" src='/images/right.png'></image>
    </view>
    <view class="bottomBorder"></view>
  </view>

  <view class="key-value border5" hidden='true'>
    <view class="key">
      <image src='/images/mingpian@2x.png'></image>
      <text>学友名片</text>
    </view>
    <view class="value">
      <image class="right-icon" src='/images/right.png'></image>
    </view>
    <view class="bottomBorder"></view>
  </view>

  <view class="key-value border5" hidden='true'>
    <view class="key">
      <image src='/images/xiaoxi@2x.png'></image>
      <text>消息通知</text>
    </view>
    <view class="value">
      <image class="right-icon" src='/images/right.png'></image>
    </view>
    <view class="bottomBorder"></view>
  </view>

</view>

