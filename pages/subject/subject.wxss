/* pages/subject/subject.wxss */

.progress{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  box-sizing: border-box;
  font-size: 26rpx;
  color: #666;
}
.progress-info{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.progress-bc{
  display: inline-block;
  position: relative;
  width: 440rpx;
  height: 26rpx;
  margin-left: 20rpx;
  border: 1px solid #C0A45B;
  border-radius: 14rpx;
  overflow: hidden;
}
.progress-bar{
  position: absolute;
  width: 40%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: #C0A45B;
}
.time{
  float: right;
}

.subject{
  
}
.select-items{

  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 30rpx;
}
.radio,.radio-icon{
  width: 38rpx;
  height: 38rpx;
}
.radio-icon{
  flex-shrink: 0;
}
.select-items text{
  font-size: 26rpx;
  margin-left: 20rpx;
}

.selt-subject{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 13px;
  color: #999999;
}
.prev image,.next image{
  width: 12rpx;
  height: 24rpx;
  margin: 0 16rpx;
}
.submit,.prev,.next{
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.selt-child{
  flex: 1;
}

.cover{
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 0 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(0,0,0,0.80);
  box-sizing: border-box;
}
.frame{
  position: relative;
  background: #FFFFFF;
  border-radius: 3px;
  box-sizing: border-box;
  width: 388rpx;
  font-size: 26rpx;
}
.frame-cont{
  padding: 30rpx 0;
  text-align: center;
}
.frame-btn{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 80rpx;
}
.frame-btn view{
  flex: 1;
  text-align: center;
}
.cancel-btn{
  color: #999999;
}
.sure-btn{
  color: #C0A45B;
}