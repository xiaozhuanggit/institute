/* pages/schedule/schedule.wxss */
@import "/template/template.wxss";

.cur-item{
  padding: 0 30rpx 0 50rpx;
}
.dates{
  position: relative;
  border-left: 1px solid #C0A45B;
  z-index: 9;
}
.date-info{
  display: flex;
  flex-direction: row;
  align-items: center;
  position: absolute;
  top: -14rpx;
  left: -10rpx;
  z-index: 10;
}
.date-icon{
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  margin-right: 20rpx;
}
.date-time{
  color: #C0A45B;
}
.v-line{
  width: 2rpx;
  height: 100%;
}

.cur-info{
  padding: 50rpx 0 40rpx 30rpx;
}
.cur-content{
  display: flex;
  flex-direction: row;
  border: 1px solid #f0f0f0;
  box-shadow: 1px 2px 4px 0 rgba(188,188,188,0.50);
  border-radius: 3px;
  font-size: 24rpx;
  color: #bcbcbc;
  line-height: 1;
}
.cur-cont-info{
  flex: 1;
  height: 144rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding:10rpx 20rpx;
  box-sizing: border-box;
}
.cur-img{
  width: 230rpx;
  height: 144rpx;
}
.cur-title{
  font-size: 30rpx;
  color: #333;
}
.lecturer{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.lec-name{
  margin-right: 40rpx;
}
.play-icon{
  width: 20rpx;
  height: 20rpx;
  vertical-align: middle;
  margin: -4rpx 10rpx 0 0;
}

.none-schedule{
  width: 100%;
  height: 600rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  color: #bcbcbc;
}

.none-icon{
  width: 110rpx;
  height: 110rpx;
}