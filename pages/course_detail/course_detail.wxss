/* pages/course_detail/course_detail.wxss */
@import "/template/template.wxss";
page{
  background-color: #efeff4;
}
.course{
  width: 100%;
  height: 422rpx;
}

.cover-info{
  position: relative;
  display: flex;
  flex-direction: row;
  align-items:flex-end;
  width: 100%;
  height: 122rpx;
  font-size: 20rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.back-home{
