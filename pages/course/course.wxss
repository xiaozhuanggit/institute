/* pages/course/course.wxss */
@import "/template/template.wxss";
page{
  padding-top: 88rpx;
}
.classification{
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 88rpx;
  z-index: 10;
  background-color: #fff;
}
.classification-items{
  
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #666;
  
}
.classification-items image{
  width: 16rpx;
  height: 16rpx;
  margin-left: 10rpx;
}
.current{
  color: #C0A45B;
}

.cover{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  padding-top: 88rpx;
  background-color: rgba(0,0,0,0.4);
  z-index: 9;
}
.tag-info{
  position: fixed;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  flex-wrap: wrap;
  padding: 14rpx 14rpx;
  box-sizing: border-box;
  z-index: 10;
}
.tag-items{
  width: 152rpx;
  height:52rpx;
  margin: 14rpx 14rpx;
  line-height: 52rpx;
  text-align: center;
  border: 1px solid #C0A45B;
  border-radius: 26rpx;
  font-size: 26rpx;
  color: #C0A45B;
  box-sizing: border-box;
}
.tag-current{
  background-color: #C0A45B;
  color: #fff;
}