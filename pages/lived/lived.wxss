/* pages/lived/lived.wxss */
.course{
  width: 100%;
  height: 422rpx;
}

.menu{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  box-shadow: 0 2px 4px 0 rgba(188,188,188,0.50);
}
.menu text{
  flex: 1;
  text-align: center;
}
.menu-current{
  color: #C0A45B;
  border-bottom: 4rpx solid #C0A45B;
}

.lecturer{
  padding: 20rpx 30rpx;
}
.lec-header{
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0 20rpx 0;
}
.lec-header text{
  margin: 0 10rpx;
}
.lec-header image{
  width: 36rpx;
  height: 6rpx;
}
.lec-cont{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.lec-head{
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
}
.lec-name{
  display: flex;
  flex-direction: column;
  align-items: left;
  justify-content: center;
  margin-left: 20rpx;
  font-size: 24rpx;
}
.lec-name text:last-child{
  color: #999;
}
.lec-pro{
  line-height: 1.6;
  font-size: 26rpx;
  color: #999;
}
.course-detail-info{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.look-more{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #C0A45B;
}
.lec-more{
  width: 20rpx;
  height: 20rpx;
}
.lec-header .lec-more{
  width: 20rpx;
  height: 20rpx;
}
.obtain-more{
  position: absolute;
  right: 30rpx;
  font-size: 24rpx;
  color: #bcbcbc;
}

.set-top{
  position: fixed;
  bottom: 38rpx;
  right: 30rpx;
}
.set-top image{
  width: 66rpx;
  height: 66rpx;
}