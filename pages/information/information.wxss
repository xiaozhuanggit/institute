/* pages/information/information.wxss */

.state-info{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 0 20rpx 0;
  font-size: 26rpx;
}
.state-info image{
  width: 248rpx;
  height: 248rpx;
}
.information{
  border-top: 20rpx solid #efeff4;
}
.feedback-info{
  width: 100%;
  height: 64rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
}
.feedback-title{
  min-width: 120rpx;
 color: #999;
}

.btn{
  width: 100%;
  position: fixed;
  bottom: 40rpx;
  left: 0;
  
}
.btn button{
  width: 350rpx;
  height: 78rpx;
  line-height: 78rpx;
  background: #C0A45B;
  border-radius: 40rpx;
  font-size: 30rpx;
  color: #fff;
}