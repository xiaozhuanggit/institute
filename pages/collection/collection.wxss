/* pages/collection/collection.wxss */
@import "/template/template.wxss";

.carousel-item{
  border: 1px solid #F0F0F0;
  box-shadow: 1px 2px 4px 0 rgba(224,224,224,0.50);
  border-radius: 3px;
}
.carousel-img{
  width: 100%;
  height: 368rpx;
}

.carousel-edit{
  height: 72rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  font-size: 26rpx;
}
.edit-icon{
  width: 26rpx;
  height: 26rpx;
  vertical-align: middle;
  margin: -4rpx 10rpx 0 0;
}

.cur-info{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 10rpx 0;
}
.cur-icon{
  width: 54rpx;
  height: 54rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}
.timed{
  color: #bcbcbc;
  font-size: 26rpx;
}

.none-record{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  color: #bcbcbc;
}
.record-icon{
  width: 100rpx;
  height: 100rpx;
}

.opt-btn{
  width: 152rpx;
  height:52rpx;
}