.live{
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  width: 100%;
  height:100%;
}

.room-cont{
  position: relative;
  width: 100%;
  height: 100%;
}

.live-info{
  padding: 20rpx;
}
.room-info{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 24rpx;
  color: #fff;
}

.roon-close{
  width: 24rpx;
  height: 24rpx;
  margin: 0 10rpx 0 0;
}

.live-time,.user-name{
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: rgba(0,0,0,.4);
  color: #fff;
  border-radius: 4rpx;
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 8rpx;
  font-size: 20rpx;
}
.live-icon{
  width: 24rpx;
  height: 16rpx;
  margin: 0 10rpx 0 0;
}

.user-name{
  position: absolute;
  left: 20rpx;
  bottom: 20rpx;
}

.user-list{
  position: absolute;
  left: 50%;
  bottom: 20rpx;
  width: 36rpx;
  height: 36rpx;
}

.member{
  position: absolute;
  top: 0;
  right: 0;
  width: 420rpx;
  height: 100%;
  padding: 0 20rpx;
  background-color: rgba(0,0,0,.5);
}

.member-num{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 52rpx;
  font-size: 24rpx;
  color: #fff;
}
.all-no{
  color: #C0A45B;
}

.member-items{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 106rpx;
  box-sizing: border-box;
}
.member-head{
  position: relative;
}
.member-head cover-image{
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
}
.member-head cover-view{
  position: absolute;
  left: 2rpx;
  bottom: 0;
  width: 52rpx;
  height: 22rpx;
  line-height: 22rpx;
  text-align: center;
  background-color: #C0A45B;
  font-size: 16rpx;
  color: #fff;
}

.member-info{
  flex: 1;
  font-size: 24rpx;
  color: #fff;
}
.member-college{
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #bcbcbc;
  font-size: 20rpx;
}
.coll-icon{
  width: 20rpx;
  height: 20rpx;
  margin: 0 6rpx 0 0;
}

.member-state{
  width: 90rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 20rpx;
  color: #bcbcbc;
}

.bottomBorder-w{
  position: absolute;
  bottom:1px;
  left:0;
  width: 100%;
  height: 1px;
  background-color: rgba(255,255,255,.2);
  -webkit-transform-origin: 0 0;
  -moz-transform-origin: 0 0;
  -ms-transform-origin: 0 0;
  -o-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scale(1, 0.5);
  -ms-transform: scale(1, 0.5);
  -o-transform: scale(1, 0.5);
  transform: scale(1, 0.5);
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}