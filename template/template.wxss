
.product-items{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 216rpx;
}
.product-picture{
  position: relative;
  width: 280rpx;
  height: 176rpx;
}
.product-picture image{
  width: 100%;
  height: 100%;
}
.live-sign{
  position: absolute;
  top: 0;
  left: 0;
  width: 66rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  font-size: 20rpx;
  color: #fff;
  background-color: #C0A45B;
  border-radius: 0 7px 7px 0;
}
.series-chapter{
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  padding: 4rpx 10rpx;
  font-size: 20rpx;
  color: #fff;
  background-color: rgba(0,0,0,0.50);
  border-radius: 2px;
}

.product-content{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: left;
  justify-content: space-between;
  height: 176rpx;
  padding: 6rpx 0 6rpx 20rpx;
  box-sizing: border-box;
}
.product-desc{
  font-size: 26rpx;
  color: #999;
}
.product-per{
  font-size: 24rpx;
  color: #999;
}
.product-data{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: left;
}
.product-data-show{
  font-size: 24rpx;
  color: #999;
}
.product-data-show image{
  width: 28rpx;
  height: 28rpx;
  vertical-align: middle;
  margin: -2rpx 10rpx 0 0;
}
.product-data-show:last-child{
  margin-left: 100rpx;
}


.goods{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
}
.goods-item{
  width: 326rpx;
  border: 1px solid #F9F9F9;
  box-shadow: 0 2px 6px 0 rgba(188,188,188,0.20);
  border-radius: 3px;
  font-size: 26rpx;
  margin-bottom: 38rpx;
  overflow: hidden;
}
.goods-info{
  padding: 10rpx;
}
.goods-img{
  width: 326rpx;
  height: 326rpx;
}
.goods-producer{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
.goods-cont{
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #bcbcbc;
}
.goods-datas{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.goods-datas image{
  width: 28rpx;
  height: 28rpx;
  vertical-align: middle;
  margin: -8rpx 0 0 0;
}

.non-cont{
  position: fixed;
  width: 100%;
  top: 0;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}
.non-icon{
  width: 302rpx;
  height: 252rpx;
  margin-top: -300rpx;
}